<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karthick.bunkmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.karthick.bunkmanager.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.karthick.bunkmanager.AddItem"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.example.karthick.bunkmanager.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.karthick.bunkmanager.DisplayItem"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.example.karthick.bunkmanager.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.karthick.bunkmanager.BunkM"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:parentActivityName="com.example.karthick.bunkmanager.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>